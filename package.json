{
  "name": "codemirror-rego",
  "version": "1.3.0",
  "description": "Rego mode and minimal key map for CodeMirror that we use at Styra.",
  "keywords": [
    "codemirror",
    "opa",
    "rego"
  ],
  "homepage": "https://github.com/styrainc/codemirror-rego#readme",
  "bugs": {
    "url": "https://github.com/styrainc/codemirror-rego/issues",
    "email": "support+opensource@styra.com"
  },
  "repository": "https://github.com/styrainc/codemirror-rego",
  "license": "Apache-2.0",
  "author": "Styra Inc.",
  "main": "dist/codemirror-rego.js",
  "files": [
    "capabilities.json",
    "key-map.js",
    "mode.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "babel src --out-dir .",
    "build-editor": "cd hack && webpack --config webpack.config.js",
    "capabilities": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Invoke-WebRequest -Uri 'https://raw.githubusercontent.com/open-policy-agent/opa/main/capabilities.json' -OutFile './builtins.json'; cat ./builtins.json | jq '{builtins:[.builtins[].name]}' > ./capabilities.json\"",
    "lint": "cd scripts && node lint ../src",
    "prepare": "npm run capabilities && npm run build  && sort-package-json && node ./RegalLinter/server.js",
    "sort-package-json": "sort-package-json"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "codemirror": "^5.65.18",
    "cors": "^2.8.5",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.4.0",
    "eslint-plugin-sort-requires": "^2.1.0",
    "json-loader": "^0.5.7",
    "sort-package-json": "^1.22.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
